<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FlightBooking"
    android:orientation="vertical"
    android:background="@drawable/backgroundcolor">

 <androidx.cardview.widget.CardView
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     app:cardCornerRadius="15dp"
     android:layout_gravity="center_horizontal"
     android:layout_margin="15dp"
     app:cardElevation="@dimen/cardview_default_elevation">
     <ScrollView
         android:layout_width="match_parent"
         android:layout_height="match_parent">
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:orientation="vertical">
    <TextView
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="From"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
        android:textColor="#039BE5"></TextView>
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="30dp"
        android:id="@+id/source"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:padding="15dp"></Spinner>

    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To"
        android:textSize="20dp"
        android:layout_marginLeft="30dp"
        android:textColor="#039BE5"></TextView>
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:id="@+id/destination"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:padding="15dp"></Spinner>
         <TextView
             android:layout_marginTop="5dp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Departure"
             android:textSize="20dp"
             android:layout_marginLeft="20dp"
             android:textColor="#039BE5"></TextView>
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:layout_marginTop="5dp">
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:hint="Choose  Date"
                 android:id="@+id/lastDate"
                 android:inputType="text"
                 android:layout_marginLeft="22dp"
                 android:fontFamily="@font/open_sans"
                 android:textColor="#000000"
                 android:paddingLeft="0dp"
                 android:textSize="20sp"/>
             <ImageView
                 android:id="@+id/imageViewup"
                 android:layout_width="204dp"
                 android:layout_height="33dp"
                 android:layout_gravity="right"
                 android:layout_marginLeft="50dp"
                 android:layout_weight="0"
                 android:contentDescription="@string/app_name"
                 android:src="@drawable/ic_date_range_black_24dp" />
         </LinearLayout>

         <TextView
             android:layout_marginTop="25dp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Flight Time"
             android:textSize="20dp"
             android:layout_marginLeft="20dp"
             android:textColor="#039BE5"></TextView>
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:layout_marginTop="5dp">

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:hint="Choose  Time"
                 android:id="@+id/timebook"
                 android:inputType="text"
                 android:layout_marginLeft="22dp"
                 android:fontFamily="@font/open_sans"
                 android:textColor="#000000"
                 android:paddingLeft="0dp"
                 android:textSize="20sp"/>

             <ImageView
                 android:id="@+id/clock"
                 android:layout_width="204dp"
                 android:layout_height="33dp"
                 android:layout_gravity="right"
                 android:layout_marginLeft="50dp"
                 android:layout_weight="0"
                 android:contentDescription="@string/app_name"
                 android:src="@drawable/ic_access_time_black_24dp" />
         </LinearLayout>

         <TextView
             android:layout_marginTop="15dp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Type of Class"
             android:textSize="20dp"
             android:layout_marginLeft="20dp"
             android:textColor="#039BE5"></TextView>
         <Spinner
             android:layout_width="match_parent"
             android:layout_height="62dp"
             android:layout_marginLeft="20dp"
             android:layout_marginRight="30dp"
             android:id="@+id/typeofclass"
             android:layout_marginBottom="5dp"
             android:layout_marginTop="5dp"
             android:padding="15dp"></Spinner>
         <TextView
             android:layout_marginTop="15dp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="No. of Travellers"
             android:textSize="20dp"
             android:layout_marginLeft="30dp"
             android:textColor="#039BE5"></TextView>
         <Spinner
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginRight="40dp"
             android:id="@+id/noof"
             android:layout_gravity="right"
             android:layout_marginBottom="5dp"
             android:layout_marginTop="-30dp"
             android:padding="15dp"></Spinner>
         <Button
        android:id="@+id/submit"
        android:layout_width="208dp"
             android:layout_marginTop="15dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:text="Submit"
             android:layout_marginBottom="20dp"
        android:background="@drawable/button_border_solid"
        android:textColor="#fff"></Button>
     </LinearLayout>
     </ScrollView>
 </androidx.cardview.widget.CardView>

</LinearLayout>